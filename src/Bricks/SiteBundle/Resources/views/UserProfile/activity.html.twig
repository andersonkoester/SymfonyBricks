{% extends 'BricksSiteBundle:UserProfile:layout.html.twig' %}

{# META TAGS blocks #}
{% set meta_title_content = user.username~" activity | SymfonyBricks.com" %}
{% set meta_description_content = user.username~" activity on SymfonyBricks.com" %}

{% block meta_title_content %}{{ meta_title_content }}{% endblock %}
{% block meta_description_content %}{{ meta_description_content }}{% endblock %}
{% block meta_og_title_content %}{{ meta_title_content }}{% endblock %}
{% block meta_og_description_content %}{{ meta_description_content }}{% endblock %}
{# END META TAGS blocks #}

{% block user_profile_content %}

    <h3>
        {{ 'nav-userprofile.activity'|trans({}, 'controller-userprofile') }}
    </h3>
    
    <ul class="activity">
        {% for log in brickLogEntries %}
            <li>
                <span class="glyphicon glyphicon-calendar"></span> last update: {{ log.loggedAt|date('d/m/Y') }}
                {#
                <a href="{{ path('brick_show', {id: brick.id, slug: brick.slug}) }}">
                    {{ brick.title }}
                </a>
                #}
            </li>
        {% endfor %}
    </ul>
        
{% endblock %}
