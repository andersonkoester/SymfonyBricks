{% extends 'BricksSiteBundle:UserProfile:layout.html.twig' %}

{# META TAGS blocks #}
{% block meta_tags %}
    {% render controller('CopiaincollaMetaTagsBundle:MetaTags:render', { 'inlineMetatags': {'title': user.username~' published bricks | SymfonyBricks.com', 'description': 'Published bricks of '~user.username~' on SymfonyBricks.com'} }) %}
{% endblock %}
{# END META TAGS blocks #}

{% block user_profile_content %}

    <h3>
        {{ 'nav-userprofile.published_bricks'|trans({}, 'controller-userprofile') }}
    </h3>
    
    <ul class="bricks-list">
        {% for brick in publishedBricks %}
            <li>
                <a href="{{ path('brick_show', {slug: brick.slug}) }}">
                    {{ brick.title }}
                </a>
                <p>
                    <span class="glyphicon glyphicon-user"></span> <a href="{{ path('userprofile_show', {'username': brick.user.username}) }}">{{ brick.user }}</a>
                    |
                    <span class="glyphicon glyphicon-calendar"></span> last update: {{ brick.updatedAt|date('d/m/Y') }}
                </p>
            </li>
        {% endfor %}
    </ul>
        
{% endblock %}
